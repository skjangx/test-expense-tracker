#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔒 Pre-commit quality gate..."

# Type checking
echo "📝 Type checking..."
npm run type-check

# Linting
echo "🧹 Linting..."
npm run lint

# Tests for staged files
echo "🧪 Running tests..."
npm run test -- --passWithNoTests

echo "✅ Pre-commit checks passed!"
